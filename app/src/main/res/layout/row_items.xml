<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fragment.AngelFragment">

    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#f0f0f0">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="5">
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image"
                    />


                <LinearLayout
                    android:layout_marginLeft="@dimen/marignleftofparentlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="@dimen/textsize"
                        android:id="@+id/txttitle"
                        android:text="first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="@dimen/textsize"
                        android:id="@+id/txtsubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="second"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="@dimen/marignleftofparentlinearlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="@dimen/textsize"
                        android:id="@+id/txtcountmonths"
                        android:text="third"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="@dimen/textsize"
                        android:id="@+id/txttimeofpayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="fourth"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_marginLeft="@dimen/marignleftofparentchildlinearlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="@dimen/textsize"
                        android:id="@+id/txtpricecoins"
                        android:text="five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="@dimen/textsize"
                        android:id="@+id/txtcoins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="six"
                        />
                </LinearLayout>




                <LinearLayout
                    android:layout_marginLeft="@dimen/marignleftofparentchildlinearlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="@dimen/textsize"
                        android:id="@+id/txtnumberofdays"
                        android:text="seven"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="@dimen/textsize"
                        android:id="@+id/txtcountdays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="eight"
                        />
                </LinearLayout>
            </LinearLayout>





        </GridLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>